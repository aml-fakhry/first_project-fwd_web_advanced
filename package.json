{
  "name": "first_project-fwd_web_advanced",
  "version": "1.0.0",
  "description": "sample image processing Api",
  "main": "app.js",
  "scripts": {
    "dev": "nodemon src/app.ts",
    "start:build": "npm run build && npm run copyAssets && node dist/src/app.js",
    "test": "npm run build && npm run copyAssets && jasmine",
    "build": "rm -rf ./dist && npx tsc && npm run lint:fix",
    "copyAssets": "cp -R ./src/assets ./dist/src/assets",
    "lint": "eslint .",
    "clearThumb": "rm -R ./src/assets/thumb/**",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "author": "Aml Fakhri",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.23",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "fig": "^1.0.0",
    "husky": "^7.0.4",
    "jasmine": "^4.0.2",
    "jasmine-spec-reporter": "^7.0.0",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "sharp": "^0.30.3",
    "supertest": "^6.2.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/jasmine": "^4.0.2",
    "@types/sharp": "^0.30.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,json}": [
      "eslint --fix"
    ],
    "src/**/*.{ts,md}": [
      "prettier --single-quote --write"
    ]
  }
}
